# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Dashboard.index()

# About
GET 	/about						controllers.Application.aboutForward()

# Authentication
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

# Registration
GET		/register					controllers.Application.registerForward()
POST	/register					controllers.Application.registerAction()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Dashboard
POST    /tire/search                controllers.Dashboard.search()
GET		/tire/search				controllers.Dashboard.searchAll()

#Json stuff
GET		/users						controllers.Application.allUserJson()
GET		/tires						controllers.Application.allTireJson()